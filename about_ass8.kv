
MDScreen:
    # mode: mode
    name: "about_ass8"
    MDFloatLayout:
        md_bg_color: .1, .1, .1, 1
            
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71, 92, 119, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "assistchat8"


        MDFloatLayout:
                    
            MDCard:
                orientation:'vertical'
                size_hint: .25, None
                height: '90dp'
                pos_hint: {"center_x":.5, "center_y": .81}
                #elevation: 3
                padding: 1
                border_radius: 20
                radius: [99]
                md_bg_color: rgba(135, 200, 133, 255)
    

                MDRelativeLayout:
                    MDFloatLayout:
                        allow_stretch: False
                        pos_hint: {"top": 1, "center_x": .5}
                        size_hint: 1, 1
                        canvas.before:
                            Color:
                                rgb: (1, 1, 1, 1)
                            RoundedRectangle:
                                size: self.width, self.height
                                pos: self.pos
                                source: "img8.png"
                                radius: [99]


            MDFloatLayout:
                size_hint: .9, .2
                pos_hint: {"center_x": .86, "center_y": .72}

                MDLabel:
                    text: "Mathew"
                    font_size: "15sp"
                    font_name: "BSan.ttf"
                    pos_hint: {"center_x": .52,  "center_y": .45}
                    color: rgba(135, 200, 133, 255)
                MDLabel:
                    text: "Christianity Theologian"
                    font_size: "12sp"
                    font_name: "ISan.ttf"
                    pos_hint: {"center_x": .45, "center_y": .3}
                    color: rgba(108, 108, 108, 255)
            MDFloatLayout:
                size_hint_x: .9
                pos_hint: {"center_x": .5, "center_y": .38}
                MDLabel:
                    text: "Meet Mathew, your AI chatbot assistant for all your religious needs. Mathew is an expert in the field of Christianity, equipped with the latest knowledge and advancements in Christian religion. With years of experience and a deep understanding of the subject matter, Mathew can assist you with anything from understanding the basic principles of Christianity to answering complex questions about Christian practices and beliefs. Whether you're a student looking to learn more about Christian religion or a follower seeking guidance in your faith, Mathew has got you covered. With a respectful and empathetic approach, Mathew is always ready to answer your questions and provide support in your spiritual journey.With Mathew as your personal assistant, you'll have access to a wealth of information and expertise that will help you deepen your understanding of the Christian faith and its teachings. So why wait? Start chatting with Mathew today and take the first step towards a deeper and more meaningful spiritual life."
                    font_size: "13sp"
                    font_name: "RSan.ttf"
                    pos_hint: {"center_x": .5, "top": 1}
                    color: rgba(108, 108, 108, 255)
                    size_hint_x: .9
            