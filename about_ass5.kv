
MDScreen:
    # mode: mode
    name: "about_ass5"
    MDFloatLayout:
        md_bg_color: .1, .1, .1, 1
            
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71, 92, 119, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "assistchat5"


        MDFloatLayout:
                    
            MDCard:
                orientation:'vertical'
                size_hint: .25, None
                height: '90dp'
                pos_hint: {"center_x":.5, "center_y": .81}
                #elevation: 3
                padding: 1
                border_radius: 20
                radius: [99]
                md_bg_color: rgba(135, 200, 133, 255)
                # on_release:
                #     root.manager.transition.direction = "left"
                #     root.manager.current = "contentchat2"

                MDRelativeLayout:
                    MDFloatLayout:
                        allow_stretch: False
                        pos_hint: {"top": 1, "center_x": .5}
                        size_hint: 1, 1
                        canvas.before:
                            Color:
                                rgb: (1, 1, 1, 1)
                            RoundedRectangle:
                                size: self.width, self.height
                                pos: self.pos
                                source: "img5.png"
                                radius: [99]


            MDFloatLayout:
                size_hint: .9, .2
                pos_hint: {"center_x": .86, "center_y": .72}

                MDLabel:
                    text: "Alex"
                    font_size: "15sp"
                    font_name: "BSan.ttf"
                    pos_hint: {"center_x": .55, "center_y": .45}
                    color: rgba(135, 200, 133, 255)
                MDLabel:
                    text: "Philosophy & Politics Expert"
                    font_size: "12sp"
                    font_name: "ISan.ttf"
                    pos_hint: {"center_x": .41,  "center_y": .3}
                    color: rgba(108, 108, 108, 255)
            MDFloatLayout:
                size_hint_x: .9
                pos_hint: {"center_x": .5, "center_y": .39}
                MDLabel:
                    text: "Meet Alex, your AI chatbot assistant for all your philosophy and politics needs. Alex is an expert in the field, equipped with the latest knowledge and advancements in philosophy and politics. With years of experience and a deep understanding of the subject matter, Alex can assist you with anything from basic philosophical concepts to complex political theories. Whether you're a student looking to ace your philosophy or political science classes or simply an enthusiast interested in exploring new ideas and perspectives, Alex has got you covered. With a curious and open-minded approach, Alex is always ready to engage in thought-provoking discussions and debates. With Alex as your personal assistant, you'll have access to a wealth of information and expertise that will help you broaden your understanding of the world and the people who shape it. So why wait? Start chatting with Alex today and discover the fascinating world of philosophy and politics"
                    font_size: "13sp"
                    font_name: "RSan.ttf"
                    pos_hint: {"center_x": .5, "top": 1}
                    color: rgba(108, 108, 108, 255)
                    size_hint_x: .9
            