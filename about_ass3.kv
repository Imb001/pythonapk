
MDScreen:
    # mode: mode
    name: "about_ass3"
    MDFloatLayout:
        md_bg_color: .1, .1, .1, 1
            
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71, 92, 119, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "assistchat3"


        MDFloatLayout:
                    
            MDCard:
                orientation:'vertical'
                size_hint: .25, None
                height: '93dp'
                pos_hint: {"center_x":.5, "center_y": .80}
               # elevation: 3
                padding: 1
                border_radius: 20
                radius: [99]
                md_bg_color: rgba(135, 200, 133, 255)
    

                MDRelativeLayout:
                    MDFloatLayout:
                        allow_stretch: False
                        pos_hint: {"top": 1, "center_x": .5}
                        size_hint: 1, 1
                        canvas.before:
                            Color:
                                rgb: (1, 1, 1, 1)
                            RoundedRectangle:
                                size: self.width, self.height
                                pos: self.pos
                                source: "img3.png"
                                radius: [99]


            MDFloatLayout:
                size_hint: .9, .2
                pos_hint: {"center_x": .86, "center_y": .72}

                MDLabel:
                    text: "Kim"
                    font_size: "15sp"
                    font_name: "BSan.ttf"
                    pos_hint: {"center_x": .56, "center_y": .43}
                    color: rgba(135, 200, 133, 255)
                MDLabel:
                    text: "Love & Emotion Consultant"
                    font_size: "12sp"
                    font_name: "ISan.ttf"
                    pos_hint: {"center_x": .43, "center_y": .3}
                    color: rgba(108, 108, 108, 255)
            MDFloatLayout:
                size_hint_x: .9
                pos_hint: {"center_x": .5, "center_y": .4}
                MDLabel:
                    text: "Meet Kim, your AI chatbot assistant for all your love and emotion needs. Kim is an expert in the field, equipped with the latest knowledge and advancements in love and emotion. With years of experience and a deep understanding of the subject matter, Kim can assist you with anything from managing your emotions to navigating complex relationships.Whether you're dealing with heartbreak, struggling with communication in your relationships, or simply looking for advice on how to navigate the world of love and emotions, Kim has got you covered. With a warm and empathetic demeanor, Kim is always ready to listen to your concerns and provide guidance and support.With Kim as your personal assistant, you'll have access to a wealth of knowledge and expertise that will help you navigate the ups and downs of love and emotions. So why wait? Start chatting with Kim today and take the first step towards a happier and more fulfilling love life."
                    font_size: "13sp"
                    font_name: "RSan.ttf"
                    pos_hint: {"center_x": .5, "top": 1}
                    color: rgba(108, 108, 108, 255)
                    size_hint_x: .9
            