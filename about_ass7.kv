
MDScreen:
    # mode: mode
    name: "about_ass7"
    MDFloatLayout:
        md_bg_color: .1, .1, .1, 1
            
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "20sp"
            theme_text_color: "Custom"
            text_color: rgba(71, 92, 119, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "assistchat7"


        MDFloatLayout:
                    
            MDCard:
                orientation:'vertical'
                size_hint: .25, None
                height: '90dp'
                pos_hint: {"center_x":.5, "center_y": .81}
                #elevation: 3
                padding: 1
                border_radius: 20
                radius: [99]
                md_bg_color: rgba(135, 200, 133, 255)
                # on_release:
                #     root.manager.transition.direction = "left"
                #     root.manager.current = "contentchat2"

                MDRelativeLayout:
                    MDFloatLayout:
                        allow_stretch: False
                        pos_hint: {"top": 1, "center_x": .5}
                        size_hint: 1, 1
                        canvas.before:
                            Color:
                                rgb: (1, 1, 1, 1)
                            RoundedRectangle:
                                size: self.width, self.height
                                pos: self.pos
                                source: "img7.png"
                                radius: [99]


            MDFloatLayout:
                size_hint: .9, .2
                pos_hint: {"center_x": .86, "center_y": .72}

                MDLabel:
                    text: "Ali"
                    font_size: "15sp"
                    font_name: "BSan.ttf"
                    pos_hint: {"center_x": .58, "center_y": .45}
                    color: rgba(135, 200, 133, 255)
                MDLabel:
                    text: "Islamic Scholar"
                    font_size: "12sp"
                    font_name: "ISan.ttf"
                    pos_hint: {"center_x": .5, "center_y": .3}
                    color: rgba(108, 108, 108, 255)
            MDFloatLayout:
                size_hint_x: .9
                pos_hint: {"center_x": .5, "center_y": .4}
                MDLabel:
                    text: "Meet Ali, your AI chatbot assistant for all your religious needs. Ali is an expert in the field of Islam, equipped with the latest knowledge and advancements in Islamic religion. With years of experience and a deep understanding of the subject matter, Ali can assist you with anything from understanding the basic principles of Islam to answering complex questions about Islamic practices and beliefs. Whether you're a student looking to learn more about Islamic religion or a follower seeking guidance in your faith, Ali has got you covered. With a respectful and empathetic approach, Ali is always ready to answer your questions and provide support in your spiritual journey. With Ali as your personal assistant, you'll have access to a wealth of information and expertise that will help you deepen your understanding of the Islamic faith and its teachings. So why wait? Start chatting with Ali today and take the first step towards a deeper and more meaningful spiritual life"
                    font_size: "13sp"
                    font_name: "RSan.ttf"
                    pos_hint: {"center_x": .5, "top": 1}
                    color: rgba(108, 108, 108,  255)
                    size_hint_x: .9
            