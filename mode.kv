MDScreen:
    name: "mode"
    MDFloatLayout:
        md_bg_color: .1, .1, .1, 1

        MDFloatLayout:
            md_bg_color: .1, .1, .1, 1
            size_hint_y: .1
            pos_hint: {"center_y": .91}
       

            MDIconButton:
                icon: "help"
                pos_hint: {"center_x": .91, "center_y": .52}
                user_font_size: "10sp"
                theme_text_color: "Custom"
                text_color: rgba(160, 160, 160, 255)
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "about_mimi"
                
            
        MDLabel:
            text: "M i M i   A . I"
            font_size: "25sp"
            font_name: "RSan.ttf"
            size_hint_x: 1
            pos_hint: {"center_y": .72}
            color: rgba(135, 200, 133, 255)
            halign: "center"
        
        MDLabel:
            text: "Make your research simple and easy."
            font_size: "12sp"
            font_name: "ISan.ttf"
            size_hint_x: 1
            pos_hint: {"center_y": .65}
            color: rgba(121, 121, 121, 255)
            halign: "center"


        MDGridLayout:
            rows: 3
            cols: 1
            size_hint: .50, .10
            pos_hint: {"center_x": .5, "center_y": .48}
            spacing: '10dp'

            MDCard:
                orientation:'vertical'
                size_hint: 1, None
                height: '50dp'
                border_radius: 20
                md_bg_color: rgba(135, 200, 133, 255)
                radius: [10, 10, 10, 10]
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "assistant"
                    app.not_arabic()
                MDRelativeLayout:
                    MDLabel:
                        text: "START"
                        font_size: "13sp"
                        font_name: "RSan.ttf"
                        adaptive_size: True
                        pos: "12dp", "17dp"
                        size_hint_x: .8
                        color: rgba(31, 31, 31, 255)
                        halign: "center"
            